@model ConsumoWebAPI_IIS_MVC.Models.Grupo

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Deletar Registro</h4>
        </div>
        <div class="modal-body">
            
                <h6>Tem Certeza que deseja DELETAR este Registro ?</h6>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GrupoNome)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <button class="btn btn-outline-danger btn-sm" type="submit"><i class="fa fa-eraser"></i> Deletar</button>
                    <a class="btn btn-outline-success btn-sm" asp-action="Index"><i class="fa fa-times"></i> Desistir</a>
                </form>
            </div>
        </div>        
    </div>
</div>
