@model ConsumoWebAPI_IIS_MVC.Models.Grupo

@{
    ViewData["Title"] = "Edição";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Edição de Grupos</h4>
        </div>
        <div class="modal-body">            
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input style="color:red;" asp-for="Id" readonly class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GrupoNome" class="control-label"></label>
                            <input asp-for="GrupoNome" class="form-control" />
                            <span asp-validation-for="GrupoNome" class="text-danger"></span>
                        </div>
                        <br /><hr />
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-primary btn-sm"><i class="fa fa-check"></i> Salvar</button>
                            <a class="btn btn-outline-success btn-sm" asp-action="Index"><i class="fa fa-times"></i> Desistir</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>       
    </div>
</div>