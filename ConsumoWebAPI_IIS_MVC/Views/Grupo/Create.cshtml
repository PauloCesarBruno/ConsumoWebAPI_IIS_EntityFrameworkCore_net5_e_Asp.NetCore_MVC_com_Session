@model ConsumoWebAPI_IIS_MVC.Models.Grupo

@{
    ViewData["Title"] = "Create";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Adicionar Novo Grupo</h4>
        </div>
        <div class="modal-body">            
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <input asp-for="Id" type="hidden" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GrupoNome" class="control-label"></label>
                            <input asp-for="GrupoNome" required class="form-control" />
                            <span asp-validation-for="GrupoNome" class="text-danger"></span>
                        </div>
                        <br /><hr />
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-outline-primary btn-sm" />
                            <a class="btn btn-outline-success btn-sm" asp-action="Index">Desistir</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>       
    </div>
</div>