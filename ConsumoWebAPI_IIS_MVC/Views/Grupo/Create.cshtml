@model ConsumoWebAPI_IIS_MVC.Models.Grupo

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Novo Grupo</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input asp-for="Id"  type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrupoNome" class="control-label"></label>
                <input asp-for="GrupoNome" class="form-control" />
                <span asp-validation-for="GrupoNome" class="text-danger"></span>
            </div>
            <br /><hr />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-primary btn-sm" />
                <a class="btn btn-outline-success btn-sm" asp-action="Index">Desistir</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
